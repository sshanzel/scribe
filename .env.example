# Google OAuth (required for calendar sync)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:4000/auth/google/callback

# Recall.ai API (required for meeting recording)
RECALL_API_KEY=your_recall_api_key
RECALL_REGION=us-west-2

# Google Gemini API (required for AI features)
GEMINI_API_KEY=your_gemini_api_key

# Salesforce OAuth (optional)
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_REDIRECT_URI=http://localhost:4000/auth/salesforce/callback

# HubSpot OAuth (optional)
HUBSPOT_CLIENT_ID=your_hubspot_client_id
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret

# LinkedIn OAuth (optional)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:4000/auth/linkedin/callback

# Facebook OAuth (optional)
FACEBOOK_CLIENT_ID=your_facebook_app_id
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=http://localhost:4000/auth/facebook/callback

# Seed user for development (optional)
SEED_USER_EMAIL=your_email@example.com
